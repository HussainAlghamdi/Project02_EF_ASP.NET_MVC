@{
    var foods = (List<SweetAndFoodModel>)ViewData["Foods"];
}

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th></th>
            <th scope="col">Id</th>
            <th></th>
            <th scope="col">Item-Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var food in foods)
        {
            <tr class="">
                <th></th>
                <th scope="row">@food.Id</th>
                <th></th>
                <td>@food.Name</td>
                <td>@food.Description</td>
                <td class="text-nowrap">@food.Price ريال</td>
                <td><img src="@food.Image" width="100" height="100" /></td>
                <th></th>

            </tr>
        }
    </tbody>
</table>
<div>
    <a href="/SweetsAndFoods/" />
    <button type="button" class="btn btn-danger">Back to Menu of Sweets And Foods</button>
    </a>
</div>